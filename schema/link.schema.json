{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://w3c.github.io/pub-manifest/schema/link.schema.json",
    "title": "Web Publication Links",
    "type": "object",
    "properties": {
        "url": {
            "type": "string",
            "format": "uri-reference"
        },
        "encodingFormat": {
            "type": "string"
        },
        "name": {
            "$ref": "localizable.schema.json"
        },
        "description": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "$ref": "localizable-object.schema.json"
                }
            ]
        },
        "rel": {
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "integrity": {
            "type": "string"
        },
        "length": {
            "type": "number",
            "exclusiveMinimum": 0
        }
    },
    "required": [
        "url"
    ]
}
