{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://w3c.github.io/pub-manifest/schema/localizable.schema.json",
    "title": "Localizable String or Object",
    "anyOf": [
        {
            "type": "string"
        },
        {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "object",
                        "$ref": "localizable-object.schema.json"
                    }
                ]
            },
            "uniqueItems": true
        },
        {
            "type": "object",
            "$ref": "localizable-object.schema.json"
        }
    ]
}
